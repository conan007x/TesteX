local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local function criarESP(player, textoInicial)
    local billboard = Instance.new("BillboardGui")
    billboard.Size = UDim2.new(0, 100, 0, 50)
    billboard.StudsOffset = Vector3.new(0, 3, 0)
    billboard.AlwaysOnTop = true

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.new(1, 1, 1)
    label.TextStrokeTransparency = 0.5
    label.TextScaled = true
    label.Parent = billboard
    label.Text = textoInicial or "Desconhecido"

    local function atualizarTexto()
        local character = player.Character
        if character and character:FindFirstChild("Head") then
            local tag = character:FindFirstChild("Tag") -- Essa Ã© a Billboard do jogo
            if tag then
                local nivel = "Desconhecido"
                for _, descendant in ipairs(tag:GetDescendants()) do
                    if descendant:IsA("TextLabel") and descendant.Text ~= player.Name then
                        nivel = descendant.Text
                        break
                    end
                end
                label.Text = player.Name .. "\n" .. nivel
            else
                label.Text = player.Name .. "\nNivel: Longe"
            end
        end
    end

    local character = player.Character or player.CharacterAdded:Wait()
    if character:WaitForChild("Head", 5) then
        billboard.Parent = character.Head
        RunService.RenderStepped:Connect(atualizarTexto)
    end
end

local function adicionarESP(player)
    if player ~= Players.LocalPlayer then
        criarESP(player, "Carregando...")
    end
end

for _, player in ipairs(Players:GetPlayers()) do
    adicionarESP(player)
end

Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function()
        adicionarESP(player)
    end)
end)
